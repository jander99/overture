{
  "rules": {
    "complexity": {
      "max_cyclomatic_complexity": 10,
      "max_cognitive_complexity": 15,
      "max_nesting_depth": 4
    },
    "size": {
      "max_function_lines": 50,
      "max_file_lines": 500,
      "max_parameters": 5
    },
    "duplication": {
      "min_duplicate_lines": 6,
      "ignore_strings": true,
      "ignore_comments": true
    },
    "naming": {
      "function_pattern": "^[a-z_][a-z0-9_]*$",
      "class_pattern": "^[A-Z][a-zA-Z0-9]*$",
      "constant_pattern": "^[A-Z][A-Z0-9_]*$"
    },
    "security": {
      "check_sql_injection": true,
      "check_xss": true,
      "check_hardcoded_secrets": true,
      "check_unsafe_deserialization": true
    }
  },
  "severity_levels": {
    "critical": ["security"],
    "high": ["complexity", "duplication"],
    "medium": ["size"],
    "low": ["naming"]
  }
}
