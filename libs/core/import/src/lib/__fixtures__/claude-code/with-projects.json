{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/home/user"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "mcp-server-memory"]
    }
  },
  "projects": {
    "/home/user/projects/my-python-app": {
      "mcpServers": {
        "python-repl": {
          "command": "uvx",
          "args": ["mcp-server-python-repl"]
        },
        "ruff": {
          "command": "uvx",
          "args": ["mcp-server-ruff"]
        }
      }
    },
    "/home/user/projects/my-web-app": {
      "mcpServers": {
        "puppeteer": {
          "command": "npx",
          "args": ["-y", "mcp-server-puppeteer"]
        }
      }
    }
  }
}
