# Overture Configuration
# This file defines plugins and MCP servers for your project.
# Generated by: overture init

# Configuration version
version: "1.0"

# Project information
project:
  # Project name
  name: {{projectName}}

  # Project type (e.g., python-backend, typescript-web, java-api, etc.)
  {{#if projectType}}
  type: {{projectType}}
  {{else}}
  type: general
  {{/if}}

  # Project description (optional)
  {{#if projectDescription}}
  description: {{projectDescription}}
  {{else}}
  # description: "A brief description of your project"
  {{/if}}

# Claude Code plugins to install
# Each plugin can declare recommended MCP servers
plugins:
  # Example:
  # python-development:
  #   marketplace: claude-code-workflows
  #   enabled: true
  #   mcps: [python-repl, ruff, filesystem]
  {}

# MCP server configurations
# Servers can be project-scoped (defined here) or global (referenced from ~/.config/overture/config.yaml)
mcp:
  # Example project-scoped MCP:
  # python-repl:
  #   command: uvx
  #   args: [mcp-server-python-repl]
  #   scope: project
  #   enabled: true
  #
  # Example global MCP reference:
  # filesystem:
  #   scope: global
  #   enabled: true
  {}
